
.hud_hide {
    visibility: hidden;
    opacity: 0;
}

.hud_show {
    visibility: visible;
    opacity: 1;
}

.hud_bg {
    position: fixed;
	width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    overflow: hidden;
	z-index: 1100;
    display: flex;
    justify-content:center;
    align-items:center;
    -webkit-transition: .3s opacity linear;
	transition: .3s opacity linear;
}

.hud_main {
    color: #FFFFFF;
    background: rgba(40, 40, 40, 0.75);
    min-width: 300rpx;
	min-height: 300rpx;
    max-width: 70%;
    max-height: 80%;
    border-radius: 20rpx;
    text-align: center;
    margin-top: -150rpx;
} 

.hud_content {
    font-size: 30rpx;
    margin-top: 15px;
    text-align: center;
    word-break: break-all;
    width: 90%;
    margin-left: 5%;
    margin-bottom: 10px;
}

.hud_icon, .hud_loading {
    margin-top: 60rpx;
	width: 50px;
	height: 50px;
    display: inline-block;
}

.hud_loading {
    -webkit-animation: hudLoading 1s steps(12, end) infinite;
    animation: hudLoading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}
@-webkit-keyframes hudLoading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
            transform: rotate3d(0, 0, 1, 0deg);
  }
  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
            transform: rotate3d(0, 0, 1, 360deg);
  }
}
@keyframes hudLoading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
            transform: rotate3d(0, 0, 1, 0deg);
  }
  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
            transform: rotate3d(0, 0, 1, 360deg);
  }
}